{
  "compilerOptions": {
  "target": "ESNext",
  "module": "ESNext",
  "rootDir": "./src",
  "outDir": "./dist",
  "esModuleInterop": true,
  "moduleResolution": "node",
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "strict": true
},
 "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  },
 "include": ["src/**/*.ts"],
 "exclude": ["node_modules"]
}